{% extends "base.html.twig" %}

{% block metatitle %}
    Recherche Events | Skateboard Social Club
{% endblock metatitle %}

{% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/hom.css') }}">
        <link rel="stylesheet" href="{{ asset('css/search.css') }}">
{% endblock stylesheets %}

{% block title %}
    searching result
{% endblock title %}

{% block main %}
    {% for event in events %}
        <div class="detail top20">
            <div class="img-card">
                <h2> {{ event.name }}</h2>
                <h3> {{ event.description }}</h3>
            </div>
        </div>
    {% endfor %}
{% endblock main %}