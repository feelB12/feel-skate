{% extends "admin/base.html.twig" %}

{% block metatitle %}
    Recherche Shop | Skateboard Social Club
{% endblock metatitle %}

{% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/hom.css') }}">
        <link rel="stylesheet" href="{{ asset('css/search.css') }}">
{% endblock stylesheets %}

{% block title %}
    searching result
{% endblock title %}

{% block main %}
    {% for shop in shops %}
        <div class="detail top20">
            <div class="img-card">
                <h2> {{ shop.title }}</h2>
                <h3> {{ shop.description }}</h3>
            </div>
        </div>
    {% endfor %}
{% endblock main %}